!!!
%html{ :lang => "en", "xml:lang" => "en", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title= @title
    %meta{ "http-equiv" => "content-type", :content => "text/html; charset=utf-8" }
    - if @description
      %meta{ :name => "description", :content => @description }
    - if @keywords
      %meta{ :name => "keywords", :content => @keywords }
    %meta{ :name => 'google-site-verification', :content => 'YFQksyL_6789O1hKsWCcsQnEeaCXhGgQMXk10Q9U8Tk' }
    %link{ :href => '/russ/stylesheets/main.css', :media => 'screen', :rel => 'stylesheet', :type => 'text/css' }
    %link{ :href => '/russ/stylesheets/coderay.css', :media => 'screen', :rel => 'stylesheet', :type => 'text/css' }
    - local_stylesheet_link_tag('local')
    %link{ :href => "/articles.xml", :rel => "alternate", :type => "application/atom+xml" }
    %script{ :type => 'text/javascript', :src  => '/russ/javascripts/jquery-1.5.1.min.js' }
    - if @page.heading == 'Bio'
      %script{ :type => 'text/javascript', :src  => '/russ/javascripts/lifespan.js' }
    = haml :analytics, :layout => false
  %body{ :class => @body_class }
    #wrap
      #nav
        %a{ :href => '/', :class => :home } &nbsp;
        / %a{ :href => '/photographs', :class => :photographs, :id => (@page.heading == 'Photographs') ? :current : '' } &nbsp;
        %a{ :href => "/portfolio", :class => :portfolio, :id => :current } &nbsp;
        %a{ :href => '/links', :class => :links, :id => (@page.heading == 'Links') ? :current : '' } &nbsp;
        %a{ :href => '/bio', :class => :bio, :id => (@page.heading == 'Bio') ? :current : '' } &nbsp;
        %a{ :href => '/colophon', :class => :colophon, :id => (@page.heading == 'Colophon') ? :current : '' } &nbsp;

      - if @page.metadata('banner img')
        #banner
          %img{ :src => '/russ/images/' + @page.metadata('banner img'), :width => '816', :height => '186', :alt => @page.metadata('banner title'), :title => @page.metadata('banner title') }

      #feature
        %img#featurepic{ :src => "/russ/images/" + @page.metadata('screenshot img'), :width => "218", :height => "200", :alt => @page.metadata('project'), :title => @page.metadata('project') }
        #maincenter
          %h1
            = @page.metadata('project')

          %p.feature
            = @page.metadata('description')
            - if @page.metadata('url')
              %a{ :href => @page.metadata('url') }
                Visit Site &raquo;
        #mainright
          %img#vert_div_photo{ :src => "/russ/images/div_vitals.gif", :alt => "Vitals" }
          %table#portfolio_table{ :width => "213" }
            %tr
              %td
                %strong
                  Launch
              %td
                = @page.metadata('launch')
            %tr
              %td
                %strong
                  Language:
              %td
                = @page.metadata('language')
            - if @page.metadata('framework')
              %tr
                %td
                  %strong
                    Framework
                %td
                  = @page.metadata('framework')
            - if @page.metadata('database')
              %tr
                %td
                  %strong
                    Database:
                %td
                  = @page.metadata('database')
            - if @page.metadata('design')
              %tr
                %td
                  %strong
                    Design:
                %td
                  = @page.metadata('design')
          %p{ :style => "margin-top: 10px;" }
            - if @page.metadata('prev')
              %a{ :href => @page.metadata('prev') }
                %img{ :src => "/russ/images/but_prev.gif", :alt => "< Prev", :title => "< Prev" }
            - if @page.metadata('next')
              %a{ :href => @page.metadata('next') }
                %img{ :src => "/russ/images/but_next.gif", :alt => "Next >", :title => "Next >", :style => "margin-left: 31px;" }

      %img{ :src => "/russ/images/" + @page.metadata('divider img'), :width => "904", :height => "33", style: "display: block;" }

      #content
        #content_left
          = yield

        %img{ :src => '/russ/images/div_archives.gif', :alt => 'Archives', :style => 'float: left;' }

        = haml :sidebar, :layout => false

      #footer
        %p
          powered by:
          %a{ :href => 'http://effectif.com/nesta' } nesta<br />
          designed by: Russell Brooks