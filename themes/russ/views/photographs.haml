!!!
%html{ :lang => "en", "xml:lang" => "en", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title= @title
    %meta{ "http-equiv" => "content-type", :content => "text/html; charset=utf-8" }
    - if @description
      %meta{ :name => "description", :content => @description }
    - if @keywords
      %meta{ :name => "keywords", :content => @keywords }
    %meta{ :name => 'google-site-verification', :content => 'YFQksyL_6789O1hKsWCcsQnEeaCXhGgQMXk10Q9U8Tk' }
    %link{ :href => '/russ/stylesheets/main.css', :media => 'screen', :rel => 'stylesheet', :type => 'text/css' }
    %link{ :href => '/russ/stylesheets/coderay.css', :media => 'screen', :rel => 'stylesheet', :type => 'text/css' }
    - local_stylesheet_link_tag('local')
    %link{ :href => "/articles.xml", :rel => "alternate", :type => "application/atom+xml" }
    %script{ :type => 'text/javascript', :src  => '/russ/javascripts/jquery-1.5.1.min.js' }
    - if @page.heading == 'Bio'
      %script{ :type => 'text/javascript', :src  => '/russ/javascripts/lifespan.js' }
    = haml :analytics, :layout => false
  %body{ :class => @body_class }
    #wrap
      #nav
        %a{ :href => '/', :class => :home, :id => @page.heading.nil? ? :current : '' } &nbsp;
        %a{ :href => '/photographs', :class => :photographs, :id => :current } &nbsp;
        %a{ :href => '/portfolio', :class => :portfolio, :id => (@page.heading == 'Portfolio') ? :current : '' } &nbsp;
        %a{ :href => '/links', :class => :links, :id => (@page.heading == 'Links') ? :current : '' } &nbsp;
        %a{ :href => '/bio', :class => :bio, :id => (@page.heading == 'Bio') ? :current : '' } &nbsp;
        %a{ :href => '/colophon', :class => :colophon, :id => (@page.heading == 'Colophon') ? :current : '' } &nbsp;

      - if @page.metadata('banner img')
        #banner
          %img{ :src => '/russ/images/' + @page.metadata('banner img'), :width => '816', :height => '186', :alt => @page.metadata('banner title'), :title => @page.metadata('banner title') }

      %img{ :src => '/russ/images/div_shadow_line.gif', :width => '904', :height => '33', :alt => '', :style => 'float: left;' }

      #content
        #content_left
          = yield

        %img{ :src => '/russ/images/div_archives.gif', :alt => 'Archives', :style => 'float: left;' }

        = haml :sidebar, :layout => false

      #footer
        %p
          powered by:
          %a{ :href => 'http://effectif.com/nesta' } nesta<br />
          designed by: Russell Brooks